# TravelHub Docker Environment Variables
# Copy this file to .env and update with your values

# Node environment
NODE_ENV=production

# Ports
FRONTEND_PORT=3001
BACKEND_PORT=3000
POSTGRES_PORT=5432
REDIS_PORT=6379

# PostgreSQL
POSTGRES_DB=travelhub
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-me-in-production

# JWT Secrets (generate with: openssl rand -base64 32)
JWT_SECRET=change-me-in-production
JWT_REFRESH_SECRET=change-me-in-production

# Frontend URL (required for CORS and backend validation)
# Development: http://localhost:3001
# Production: https://travelhub.yourdomain.com
FRONTEND_URL=http://localhost:3001

# Frontend API URL
# Development: http://localhost:3000/api
# Production: https://api.travelhub.yourdomain.com/api
VITE_API_BASE_URL=http://localhost:3000/api
