# ===== SERVER CONFIG =====
PORT=3000
NODE_ENV=development

# ===== DATABASE =====
DATABASE_URL=postgresql://user:password@localhost:5432/travelhub
REDIS_URL=redis://localhost:6379

# ===== AUTHENTICATION & SECURITY =====
JWT_SECRET=your-secret-key-here-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# OAuth - Google
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# ===== FRONTEND =====
FRONTEND_URL=http://localhost:5173,http://localhost:3001

# ===== API INTEGRATIONS =====

# Travelpayouts/Hotellook API (active)
TRAVELPAYOUTS_TOKEN=your_travelpayouts_token_here
TRAVELPAYOUTS_MARKER=travelhub

# Other API Keys (future integrations)
BOOKING_API_KEY=your_booking_key
SKYSCANNER_API_KEY=your_skyscanner_key
AMADEUS_API_KEY=your_amadeus_key
AMADEUS_API_SECRET=your_amadeus_secret

# Currency Conversion API (optional - uses free API by default)
# CURRENCY_API_KEY=your_exchangerate_api_key
# CURRENCY_API_URL=https://api.exchangerate-api.com/v4/latest
DEFAULT_CURRENCY=USD

# ===== RATE LIMITING =====
RATE_LIMIT_WHITELIST=  # Comma-separated IPs to whitelist

# ===== EMAIL SERVICE =====
EMAIL_SERVICE=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=TravelHub <noreply@travelhub.com>

# SendGrid (alternative)
# SENDGRID_API_KEY=your_sendgrid_key

# ===== PAYMENT GATEWAYS =====
# Stripe
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# ===== FILE STORAGE =====
# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=travelhub-uploads

# ===== AFFILIATE PROGRAM =====
AFFILIATE_COMMISSION_LEVEL_1=5.0    # 5% for direct referrals
AFFILIATE_COMMISSION_LEVEL_2=2.5    # 2.5% for second level
AFFILIATE_COMMISSION_LEVEL_3=1.0    # 1% for third level
AFFILIATE_MIN_PAYOUT=50.00          # Minimum payout amount

# ===== ANALYTICS =====
GOOGLE_ANALYTICS_ID=UA-XXXXX-X
MIXPANEL_TOKEN=your_mixpanel_token

# ===== MONITORING =====
SENTRY_DSN=your_sentry_dsn

# ===== MISC =====
LOG_LEVEL=info
MAX_FILE_SIZE=10485760  # 10MB in bytes
