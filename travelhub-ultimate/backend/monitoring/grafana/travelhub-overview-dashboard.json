{
  "dashboard": {
    "title": "TravelHub - Overview Dashboard",
    "tags": ["travelhub", "overview"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "30s",
    "panels": [
      {
        "title": "HTTP Request Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{route}}",
            "refId": "A"
          }
        ]
      },
      {
        "title": "HTTP Request Duration (p95)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{route}}",
            "refId": "A"
          }
        ]
      },
      {
        "title": "Active Users",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "active_users",
            "refId": "A"
          }
        ]
      },
      {
        "title": "Total Users",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 8},
        "targets": [
          {
            "expr": "users_total",
            "refId": "A"
          }
        ]
      },
      {
        "title": "Bookings Rate",
        "type": "graph",
        "gridPos": {"h": 4, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(bookings_total[5m])",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ]
      },
      {
        "title": "Error Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "rate(errors_total[5m])",
            "legendFormat": "{{type}} - {{severity}}",
            "refId": "A"
          }
        ]
      },
      {
        "title": "Cache Hit Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "rate(cache_hits_total[5m]) / (rate(cache_hits_total[5m]) + rate(cache_misses_total[5m]))",
            "legendFormat": "{{cache_name}}",
            "refId": "A"
          }
        ]
      },
      {
        "title": "Database Query Duration (p95)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(database_query_duration_seconds_bucket[5m]))",
            "legendFormat": "{{operation}} - {{table}}",
            "refId": "A"
          }
        ]
      },
      {
        "title": "External API Call Duration (p95)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(external_api_call_duration_seconds_bucket[5m]))",
            "legendFormat": "{{api}}",
            "refId": "A"
          }
        ]
      },
      {
        "title": "Queue Size",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "queue_size",
            "legendFormat": "{{queue}}",
            "refId": "A"
          }
        ]
      },
      {
        "title": "Revenue (Total)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 28},
        "targets": [
          {
            "expr": "sum(booking_revenue_total)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD"
          }
        }
      }
    ]
  }
}
